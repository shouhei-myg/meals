<div class="columns">
  <div class="column">
    <h1 class="title is-1">Show User</h1>
  </div>
  <div class="column has-text-right">
    <%= link_to '<i class="fas fa-chevron-left mr-1"></i> Back'.html_safe, users_path, class: 'button mr-3' %>
  </div>
</div>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<div class="mt-5 pt-5">
  <%= link_to 'Edit', edit_user_path(@user), class: 'button is-success' %>
</div>
