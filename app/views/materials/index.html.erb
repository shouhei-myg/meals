<div class="columns">
  <div class="column">
    <h1 class="title is-1">Materials</h1>
  </div>
  <div class="column has-text-right">
    <%= link_to '<i class="fas fa-file-medical mr-1"></i>New'.html_safe, new_material_path, class: 'button' %>
  </div>
</div>

<div class="error">
  <% if @error_message %>
    <p style="color:#f00;"><%= @error_message %></p>
  <% end %>
</div>

<% if @materials.present? %>
  <table class="table is-fullwidth">
    <thead>
      <tr>
        <th>材料名</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @materials.each do |material| %>
        <tr class="jets-element-to-delete">
          <td><%= material.name %></td>
          <td class="has-text-right">
              <%= link_to '<i class="fas fa-file-alt"></i>'.html_safe, [material] %>
              <%= link_to '<i class="fas fa-pencil-alt ml-3"></i>'.html_safe, edit_material_path(material) %>
              <%= button_to '削除', [material], method: :delete, form_class: "far fa-trash-alt" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="notification is-warning">
    Data Not Found.
  </div>
<% end %>